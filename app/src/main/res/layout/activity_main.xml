<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alan_flores.myapplication.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/TeamA_Text_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Team A"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                android:padding="16dp"/>

            <TextView
                android:id="@+id/Counter_Text_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:text="3"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/Three_Point_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="clickThree"
                android:text="+3 Points"
                android:textAllCaps="true"/>

            <Button
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/Two_Point_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickTwo"
                android:text="+2 Points"
                android:textAllCaps="true"/>

            <Button
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:id="@+id/one_Point_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:textAllCaps="true"
                android:onClick="clickOne"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray">
        </View>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/TeamB_Text_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Team B"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                android:padding="16dp"/>

            <TextView
                android:layout_marginBottom="24dp"
                android:id="@+id/CounterB_Text_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:text="3"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"/>

            <Button
                android:id="@+id/ThreeB_Point_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickThreeB"
                android:text="+3 Points"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:textAllCaps="true"/>

            <Button
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/TwoB_Point_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickTwoB"
                android:text="+2 Points"
                android:textAllCaps="true"/>

            <Button
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:id="@+id/oneB_Point_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:textAllCaps="true"
                android:onClick="clickOneB"/>
        </LinearLayout>
    </LinearLayout>
        <Button
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:onClick="clickReset"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="32dp"/>
</RelativeLayout>
